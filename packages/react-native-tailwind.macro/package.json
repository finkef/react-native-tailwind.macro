{
  "name": "react-native-tailwind.macro",
  "version": "0.1.0",
  "description": "Babel macro for writing tailwind styles in React Native (+Web)",
  "main": "dist/cjs",
  "module": "dist",
  "source": "src",
  "types": "types.d.ts",
  "files": [
    "src",
    "dist",
    "android",
    "ios",
    "cpp",
    "react-native-tailwind-macro.podspec",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "release": "release-it",
    "clean": "rimraf ./dist",
    "build": "yarn build:module && yarn build:commonjs",
    "build:module": "tsc",
    "build:commonjs": "tsc -p tsconfig.cjs.json"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/ticketbro/react-native-tailwind.macro",
  "author": "Fabian Finke <fabian@ticketbro.io> (https://github.com/finkef)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ticketbro/react-native-tailwind.macro/issues"
  },
  "homepage": "https://github.com/ticketbro/react-native-tailwind.macro#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@babel/template": "^7.15.4",
    "babel-plugin-macros": "^3.1.0",
    "nanoid": "^3.1.25",
    "react-native-media-query": "^1.0.9",
    "tailwind-rn": "^3.0.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@react-native-community/eslint-config": "^2.0.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/babel-plugin-macros": "^2.8.5",
    "@types/jest": "^26.0.0",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.62.13",
    "@types/tailwindcss": "^2.2.4",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-tester": "^10.1.0",
    "commitlint": "^11.0.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "glob-all": "^3.2.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-react-native": "^18.0.0",
    "pod-install": "^0.1.0",
    "postcss": "^8.3.9",
    "prettier": "^2.0.5",
    "react": "16.13.1",
    "react-native": "0.63.4",
    "react-native-builder-bob": "^0.18.0",
    "release-it": "^14.2.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.2.16",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/src/__tests__/__fixtures__"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "react-native/no-inline-styles": "off",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": false,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false,
          "semi": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/",
    "src/__tests__/__fixtures__"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "semi": false
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
